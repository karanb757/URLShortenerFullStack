{
    "buildCommand": "npm install && npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install",
    "framework": "vite",
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "https://your-backend.vercel.app/api/:path*"
      },
      {
        "source": "/:path*",
        "destination": "/index.html"
      }
    ]
  }