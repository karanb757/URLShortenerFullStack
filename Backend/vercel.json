{
    "version": 2,
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/app.js"
      }
    ],
    "env": {
      "MONGO_URL": "@mongo_url",
      "JWT_SECRET": "@jwt_secret",
      "APP_URL": "@app_url",
      "FRONTEND_URL": "@frontend_url"
    }
  }